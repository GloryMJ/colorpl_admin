<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomBottomNavTextAppearance" parent="TextAppearance.MaterialComponents.Caption">
        <item name="fontFamily">@font/suite_semibold</item>
        <item name="android:textSize">12sp</item>
        <item name="android:lineSpacingExtra">20dp</item>
    </style>

    <style name="CustomDatePicker" parent="android:Widget.Material.DatePicker">
        <item name="android:textColor">#FF0000</item>
        <item name="android:textSize">18sp</item>
        <item name="android:fontFamily">@font/suite_bold</item>
    </style>

    <style name="FABPopupAnimation">
        <item name="android:windowEnterAnimation">@anim/anim_fab_open</item>
        <item name="android:windowExitAnimation">@anim/anim_fab_close</item>
    </style>

    <style name="CustomSearchView" parent="Widget.AppCompat.SearchView">
        <item name="android:textColor">@color/white</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:paddingTop">4dp</item>
        <item name="queryBackground">@null</item>
        <item name="android:paddingBottom">0dp</item>
        <item name="android:textColorHint">@color/white</item>
        <item name="android:editTextColor">@color/white</item>
        <item name="android:textSize">16sp</item>
        <item name="android:fontFamily">@font/suite_medium</item>
    </style>
</resources>
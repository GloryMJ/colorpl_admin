<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="type"
            type="boolean" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/night"
        tools:context="com.presentation.my_page.MyReviewFragment">


        <include
            android:id="@+id/include_top"
            layout="@layout/include_top"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            app:title="@{@string/my_page_my_review}" />


        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/cl_tab"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="15dp"
            android:layout_marginTop="30dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/include_top">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ml_ticket_tab"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:layout_constraintTop_toTopOf="parent">


                <ImageView
                    android:id="@+id/iv_un_use_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="72dp"
                    android:layout_marginEnd="67dp"
                    android:background="@drawable/selector_ic_unuse_ticket"
                    app:layout_constraintEnd_toStartOf="@+id/iv_use_ticket"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/iv_use_ticket"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="67dp"
                    android:layout_marginEnd="72dp"
                    android:background="@drawable/selector_ic_use_ticket"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toEndOf="@+id/iv_un_use_ticket"
                    app:layout_constraintTop_toTopOf="parent" />

                <View
                    android:id="@+id/line"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"
                    android:layout_marginTop="0.5dp"
                    android:background="@color/white_fifty"
                    app:layout_constraintTop_toBottomOf="@+id/indicator" />

                <View
                    android:id="@+id/indicator"
                    android:layout_width="60dp"
                    android:layout_height="2dp"
                    android:layout_marginTop="5dp"
                    android:background="@color/imperial_red"
                    app:layout_constraintEnd_toEndOf="@+id/iv_un_use_ticket"
                    app:layout_constraintStart_toStartOf="@+id/iv_un_use_ticket"
                    app:layout_constraintTop_toBottomOf="@+id/iv_un_use_ticket" />
            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.constraintlayout.widget.ConstraintLayout>


        <TextView
            android:id="@+id/tv_review_count"
            style="@style/suite_bold_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="15dp"
            android:layout_marginTop="14dp"
            android:includeFontPadding="false"
            android:text="@{type ? @string/my_page_un_review_count : @string/my_page_use_review_count, default=@string/my_page_un_review_count}"
            android:textColor="@color/timber_wolf"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/cl_tab" />

        <TextView
            android:id="@+id/tv_review_count_value"
            style="@style/suite_bold_20"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="8dp"
            android:includeFontPadding="false"
            android:text="7"
            android:textColor="@color/imperial_red"
            app:layout_constraintBottom_toBottomOf="@+id/tv_review_count"
            app:layout_constraintStart_toEndOf="@+id/tv_review_count"
            app:layout_constraintTop_toTopOf="@+id/tv_review_count" />

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rc_review"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:clipToPadding="false"
            android:paddingBottom="40dp"
            app:layoutManager="androidx.recyclerview.widget.LinearLayoutManager"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/tv_review_count" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>